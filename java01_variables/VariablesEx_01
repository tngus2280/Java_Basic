//소스코드가 포함된 패키지를 나타낸다
package Java01_variables;

//클래스 정의(자바 프로그램의 기본 구성요서, 객체지향파트에서 자세히 다룸)
public class VariablesEx_01 {

	//메인 메소드 - 프로그램의 시작점 (Entry Point, EP)
	public static void main(String[] args) {
		
		//콘솔에 데이터(문장) 한개를 출력하는 기능(메소드)
		System.out.println("하이!");
		
		int number; //변수 선언 - 변수 공간 생성 (할당)
		
		number = 10; //변수에 값을 대입 - 변수 공간 데이터 저장
		
		System.out.println( number ); //콘솔에 변수안에 저장된 값을 출력
		
	} //end main - 프로그램 종료점

} //end class


//한 줄 주석 단축키 : ctrl + shift + c
//주석 처리하고 싶은 줄을 드래그해서 단축키 사용
