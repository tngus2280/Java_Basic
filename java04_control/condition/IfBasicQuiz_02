	System.out.println("1:");
	System.out.println("2:");
	System.out.println("3:");
	int res1 = sc.nextInt();
	int res2 = sc.nextInt();
	int res3 = sc.nextInt();
	
	int sres;
	int avg;
	
	sres = res1 + res2+ res3;
	avg = sres/3;
	
	if (avg>=90) {
		System.out.println("A");
	}else if(avg >=80) {
		System.out.println("B");
	}else if(avg >=70) {
		System.out.println("C");
	}else {
		System.out.println("F");
	}
	
	
